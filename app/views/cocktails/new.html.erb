<div class="container py-5 px-5">
  <h2>Which cocktail you want to add?</h2>
  <div class="form-group">
    <%= simple_form_for(@cocktail) do |f| %>
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.submit class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>

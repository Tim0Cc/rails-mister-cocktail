<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>

<h2> <%= @cocktail.name %> </h2>
<%= link_to('Back', cocktails_path) %>
<%= link_to('Add Doses', new_cocktail_dose_path(@cocktail)) %>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description %> - <%= dose.ingredient.name %> <%= link_to "X", dose_path(dose), method: :delete, data: { confirm: "Are you sure, you want to delete this dose?" } %>
    </li>
  <% end %>
</ul>

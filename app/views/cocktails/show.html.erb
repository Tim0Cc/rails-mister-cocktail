<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">
      <div>
        <div class="card">
          <div class="card-body">
            <h2  class="text-center"> <%= @cocktail.name %> </h2>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <div class="row">
                  <div class="w-25">
                    <h5>Dose</h5>
                  </div>
                  <div>
                    <h5>of</h5>
                  </div>
                </div>
              </li>
              <% @cocktail.doses.each do |dose| %>
                <li class="list-group-item">
                  <div class="row">
                    <div class="w-25">
                      <%= dose.description %>
                    </div>
                    <div class="d-flex justify-content-between flex-grow-1">
                      <div>
                        <%= dose.ingredient.name %>
                      </div>
                      <div>
                        <%= link_to "X", dose_path(dose), method: :delete, data: { confirm: "Are you sure, you want to delete this dose?" } %>
                      </div>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
            <%= link_to('Back', cocktails_path, class: "btn btn-warning") %>
            <%= link_to('Add Doses', new_cocktail_dose_path(@cocktail), class: "btn btn-primary") %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
